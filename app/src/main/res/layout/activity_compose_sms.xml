<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".composeSMS">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_compose_sms" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabmorse"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:clickable="true"
        app:srcCompat="@drawable/ic_morse_cod_white_com" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabsend"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center|center_horizontal|center_vertical|end"
        android:clickable="true"
        app:srcCompat="@drawable/ic_send_white_24dp" />

</android.support.design.widget.CoordinatorLayout>